<div id="new-note-form" class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="card box">
      <%= form_tag(new_user_note_path(current_user.id), method: "get", remote: true, class:"list-group list-group-flush") do %>
      <div class="form-group row">
        <%= label_tag(:name, "Name of Coffee", class:"col-xs-4 col-form-label") %>
        <div class="col-xs-8">
        <%= text_field_tag :name, "", class:"form-control" %>
      </div>
      </div>
        <div class="form-group row">
        <%= label_tag(:message, "Thoughts about this coffee:", class:"col-xs-4 col-form-label") %>
      <div class="col-xs-8">
        <%= text_field_tag :message, "" , class:"form-control"%>
      </div>
        </div>
        <%= label_tag(:rating, "How would you rate this coffee?") %>
        <%= range_field(:rating, in: 1..5, :step=>1) %>
        <%= submit_tag("Record", class:"btn btn-warning")%>
      <% end %>
      </div>
    </div>
  </div>
</div>
