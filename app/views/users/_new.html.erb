<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <div class="brand">
        <div class="container">
          <h1 class="address-bar">Start Your Tasting Journey</h1>
            <div class="lead text-xs-center">Welcome, get ready for your next coffee tasting journey...</div>
        </div>
      </div>

<%= form_for :user, url: '/users' do |f| %>

  <span class="accent-color">Name:</span> <%= f.text_field :name %>
  <span class="accent-color">Email:</span> <%= f.text_field :email %>
  <span class="accent-color">Password:</span> <%= f.password_field :password %>
  <span class="accent-color">Password Confirmation:</span> <%= f.password_field :password_confirmation %><br><br>
  <div class="col-md-4"></div>
  <div class="col-md-4 submit-button"><%= f.submit "Submit", class: "btn btn-warning" %></div>
  <div class="col-md-4"></div>


<% end %>
